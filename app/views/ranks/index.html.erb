<h1>Listing ranks</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Can Kick</th>
      <th>Can Massmail</th>
      <th>Can Edit</th>
      <th>Can Invite</th>
      <th>Can Disband</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @ranks.each do |rank| %>
      <tr>
        <td><%= rank.name %></td>
        <td><%= rank.can_kick %></td>
        <td><%= rank.can_massmail %></td>
        <td><%= rank.can_edit %></td>
        <td><%= rank.can_invite %></td>
        <td><%= rank.can_disband %></td>
        <td><%= link_to 'Show', rank %></td>
        <td><%= link_to 'Edit', edit_rank_path(rank) %></td>
        <td><%= link_to 'Destroy', rank, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

