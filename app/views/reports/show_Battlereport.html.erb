<h1>Battlereport</h1>

<h3>Schiffe Verteidiger Vorher:</h3>
<% @report.reportable.shipcounts.where(shipowner_time_type: 0).order(:user_id).each do |shipcount| %>
  <p>
    <%= shipcount.ship.name + ': ' + shipcount.amount.to_s + ' von ' + shipcount.user.username %>
  </p>
<% end %>

