<h1>Battlereport</h1>
</br>
<div>
  <h4>Flotten vor dem Kampf:</h4>
  <div style="float: left; min-width: 350px;">
    <h5>Verteidiger:</h5>
    <% @report.reportable.shipcounts.where(shipowner_time_type: 0).order(:user_id).each do |shipcount| %>
      <p>
        <%= shipcount.ship.name + ': ' + shipcount.amount.to_s + ' von ' + shipcount.user.username %>
      </p>
    <% end %>
  </div>
  <div style="float: right; min-width: 350px;">
    <h5>Angreifer:</h5>
    <% @report.reportable.shipcounts.where(shipowner_time_type: 1).order(:user_id).each do |shipcount| %>
      <p>
        <%= shipcount.ship.name + ': ' + shipcount.amount.to_s + ' von ' + shipcount.user.username %>
      </p>
    <% end %>
  </div>
</div>
<hr>
<div style="clear: both; padding-top: 10px;">
  <h4>Schiffe nach dem Kampf:</h4>
  <div style="float: left; min-width: 350px; padding-bottom: 15px;">
    <h5>Verteidiger:</h5>
    <% @report.reportable.shipcounts.where(shipowner_time_type: 2).order(:user_id).each do |shipcount| %>
      <p>
        <%= shipcount.ship.name + ': ' + shipcount.amount.to_s + ' von ' + shipcount.user.username %>
      </p>
    <% end %>
  </div>
  <div style="float: left; min-width: 350px; padding-bottom: 15px;">
    <h5>Angreifer:</h5>
    <% @report.reportable.shipcounts.where(shipowner_time_type: 3).order(:user_id).each do |shipcount| %>
      <p>
        <%= shipcount.ship.name + ': ' + shipcount.amount.to_s + ' von ' + shipcount.user.username %>
      </p>
    <% end %>
  </div>
</div>

<% unless @report.reportable.buildingtypes.empty? %>
  <div>
    <h4>zerstörte Gebäude:</h4>
    <% @report.reportable.buildingtypes.each do |buildingtype| %>
      <p>
        <%= buildingtype.name + ': ' + buildingtype.level.to_s %>
      </p>
    <% end %>
  </div>
<% end %>

<div>
  <h3>gestohlene Ressourcen:</h3>
  <p>
  	<%= 'Erz:' + @report.reportable.stolen_ore.to_s + ', Space Cash: ' + @report.reportable.stolen_space_cash.to_s +
   		', Crystal:' + @report.reportable.stolen_crystal.to_s %>
  </p>
</div>
<%= link_to 'Zurück', :back %>