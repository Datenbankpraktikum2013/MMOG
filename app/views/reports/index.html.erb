<h1>Berichte</h1>

<table class="table table-striped table-bordered table-condensed table-hover">
  <thead>
    <tr align="center">
      <th>Typ</th>
      <th>Ziel Planet</th>
      <th>Herkunfts Planet</th>
      <th>Zeitpunkt</th>
      <th>Ziel</th>
      <th>Attacker</th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @reports.each do |report| %>
      <tr class="<%= report.read == "t" ? "read" : "unread" %>">
        <td><%= report.reportable_type %></td>
        <td><%= report.defender_planet.name %></td>
        <td><%= report.attacker_planet.name %></td>
        <td><%= report.fightdate.strftime('%d.%m.%y') %> <br /> <%= report.fightdate.strftime('%H:%M Uhr') %></td>
        <td><%= report.defender.nil? ?  "-" : report.defender.username %></td>
        <td><%= report.attacker.username %></td>
        <td><%= link_to 'Show', report.reportable, class: "btn btn-small" %></td>
        <td><b><%= link_to 'X', report, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></b></td>
     </tr>
    <% end %>
  </tbody>
</table>

<br>
