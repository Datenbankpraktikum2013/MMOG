<strong>Posteingang</strong>
<div>
<table class="table table-striped table-bordered table-condensed">
  <thead>
    <tr>
      <th>Betreff</th>
      <th>Absender</th>
      <th>Gesendet um:</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @usermessages = current_user.messages %>  
    <% @usermessages.each do |message| %>
      <% unless message.deleted == 't' %>
        <% @read=message.read %>
        <tr>
          <td>
            <% @read ? '' : '<strong>' %><%= message.subject %><% @read ? '' : '</strong>' %>
          </td>
          <td>
            <% if message.sender!=nil %>
              <%= message.sender.username %>
            <% else %>
              System
            <% end %>
          </td>
          <td>
            <%= message.created_at %>
          </td>
          <td><%= link_to 'Anzeigen', message, class: 'label label-info', :style=>'color:#FFFFFF;' %></td>
          <td><%= link_to 'LÃ¶schen', message, method: :delete, class: 'label label-important', data: { confirm: 'Bist du dir sicher?' }, :style=>'color:#FFFFFF;' %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>
</div>
