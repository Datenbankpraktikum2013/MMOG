        <td><%= message.sender.username %></td>
        <td><%= message.created_at %></td>
        <td><%= link_to 'Anzeigen', message %></td>
        <td><%= link_to 'LÃ¶schen', message, method: :delete, data: { confirm: 'Are you sure?' } %></td>
