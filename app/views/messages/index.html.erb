<h1>Postausgang</h1>

<table>
  <thead>
    <tr>
      <th>Betreff</th>
      <th>An</th>
      <th>Gesendet um:</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @usermessages = current_user.sent_messages %>  
    <% @usermessages.each do |message| %>
      <tr>
        <td><%= message.subject %></td>
        <td><%= message.recipients.find(:all, :select => 'username').map{|u| u.username}.join(", ") %></td>
        <td><%= message.created_at %></td>
        <td><%= link_to 'Anzeigen', message %></td>
        <td><%= link_to 'LÃ¶schen', message, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

