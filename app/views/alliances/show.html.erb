<p>
  <h1><%= @alliance.name %></h1>
</p>
<p>
	<strong>Gr√ºnder:</strong>
	<%= @founder.username %>
</p>

<p>
	<%= @alliance.description %>
</p>

<p>
	<strong>Mitglieder:</strong><br />
	<table class="table table-striped table-bordered table-condensed">		
		<tr>
			<th>Name</th>
			<% if current_user.alliance_id!=nil and current_user.alliance_id==@alliance.id %>
				<th>Spacecash</th>
				<th>Userwertung</th>
				<th>Rank</th>
				<th>Status</th>
			<% end %>	
		</tr>
		
		<% @alliance.users.each do |user| %>
			<tr>
			<td><%=user.username%></td>
			<% if current_user.alliance_id!=nil and current_user.alliance_id==@alliance.id %>
				<td><%=user.money%></td>
				<td><%=user.score%></td>
				<td><%=user.rank.name%></td>
				<td><% if user.online? %>
						<font color="green">online</font>
					<% else %>
						<font color="red">offline</font>
					<% end %>
				</td>
			</tr>
			<% end %> 
		<% end %>
	</table>
</p>

<%= button_to 'Bearbeiten', edit_alliance_path(@alliance), class: 'btn', :method => :get if @alliance.permission?(current_user,"show_edit")%>