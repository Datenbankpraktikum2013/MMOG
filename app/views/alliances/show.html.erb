<p id="notice"><%= notice %></p>

<p>
  <h1><%= @alliance.name %></h1>
</p>
<p>
	<strong>Gründer:</strong>
	<%= @founder.username %>
</p>

<p>
	<%= @alliance.description %>
</p>

<p>
	<strong>Mitglieder:</strong><br />
	<table border="1px">
		<tr>
			<th>Name</th>
			<th>Spacecash</th>
			<th>Userwertung</th>
			<th>Rank</th>
		</tr>
		<% @alliance.users.each do |user| %>
			<tr>
				<td><%=user.username%></td>
				<td><%=user.money%></td>
				<td><%=user.score%></td>
				<td><%=user.rank.name%></td>
			</tr>
		<% end %>
	</table>
</p>
	
<% if current_user==@founder%>
	<%= link_to 'Bearbeiten', edit_alliance_path(@alliance) %> |
<%end%>
<%= link_to 'Zurück', alliances_path %>
