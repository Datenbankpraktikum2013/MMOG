<h1>Alle Allianzen im Überblick</h1>
<table class="table table-striped table-bordered table-condensed sort">
	<thead>
		<tr>
			<th>Name</th>
			<th>Allianzscore</th>
			<th>Gründer</th>
			<th>Mitglieder</th>
			<th>Link</th>
		</tr>
	</thead>
	<tbody>
	<% @alliances.each do |alliance| %>
		<tr>
			<td><%=alliance.name%></td>
			<td><%=alliance.score%></td>
			<td><%=alliance.ranks.where(:is_founder=>true)[0].users[0].username %></td>
			<td><%=alliance.users.count%></td>
			<td><%= link_to 'Allianzansicht', alliance, class: 'label label-success', :style=>'color:#FFFFFF'%></td>
		</tr>
	<% end %>
	</tbody>
</table>

<script>
  $(document).ready(function() {

    $('.sort').dataTable({
    "sDom": "<'row'<'span5'p><'span6'f>r>t>",
    "sPaginationType": "bootstrap",
    "aaSorting": [[ 1, "desc" ]],
    "aoColumns": [
      {sWidth: "35%"},
      {sWidth: "20%"},
      {sWidth: "25%"},
      {sWidth: "10%"},
      {sWidth: "10%"}
    ]});

    $.extend( $.fn.dataTableExt.oStdClasses, {
        "sWrapper": "dataTables_wrapper form-inline"
    });
  });
</script>