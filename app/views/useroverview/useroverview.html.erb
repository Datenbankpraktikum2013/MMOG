<h1>Alle Spieler im Ãœberblick</h1>
<table class="table table-striped table-bordered table-condensed sort ">
	<thead>
		<tr>
			<th>Platz</th>
			<th>Name</th>
			<th>Allianz</th>
			<th>Score</th>
		</tr>
	</thead>
	<% x=1 %>
	<tbody>
	<% @users.each do |user| %>
		<tr>
			<td><%=x%></td>
			<td><%=user.username%></td>
			<% if user.alliance!=nil %>
				<td><%=user.alliance.name%></td>
			<% else %>
				<td></td>
			<% end %>		
			<td><%=user.score%></td>
		</tr>
		<%x=x+1%>
	<% end %>
	</tbody>
</table>

<script>
  $(document).ready(function() {

    $('.sort').dataTable({
    "sDom": "<'row'<'span5'p><'span6'f>r>t>",
    "sPaginationType": "bootstrap",
    "aoColumns": [
      {sWidth: "10%"},
      {sWidth: "40%"},
      {sWidth: "30%"},
      {sWidth: "20%"},
    ]});

    $.extend( $.fn.dataTableExt.oStdClasses, {
        "sWrapper": "dataTables_wrapper form-inline"
    });
  });
</script>