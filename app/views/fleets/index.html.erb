<h1>Deine Flotten</h1>
<table class="table table-striped">
  <thead>
    <tr>
      <th>FlottenID</th>
      <th>Mission</th>
      <th>Schiffe</th>
      <th>Derzeitiger Aufenthalt</th>
      <th>Derzeitiges Ziel</th>
    </tr>
  </thead>

  <tbody>
    <% @fleets.each do |fleet| %>
      <tr>
        <td><%= fleet.id %></td>
        <td><%= fleet.mission.id %></td>
        <% if fleet.mission.id == 1 %>
          <td><a type="button" fleet="<%=fleet.id%>" class="btn btn-link ship-info">Schiffe</a></td>
          <td><%= fleet.origin_planet.name %></td> <!-- hier noch KOORDINATEN -->
          <td> -based- </td>
        <% else %>
          <td><a type="button" fleet="<%=fleet.id%>" class="btn btn-link ship-info">Schiffe</a></td>
          <td> -on a flight- </td>
          <td><% fleet.target_planet.name %></td> <!-- hier noch KOORDINATEN -->
        <% end %>
      </tr>
      <% unless fleet.get_ships.empty? %>
      <tr>
        <td colspan="5">
          <div class="info-<%= fleet.id %>" style="display:none">
              <table class"table table-condensed">
                <thead>
                  <tr>
                    <th>Schiffsname</th>
                    <th>Angriff</th>
                    <th>Verteidigung</th>
                    <th>Geschwindigkeit</th>
                    <th>Ladekapazit√§t</th>
                    <th>Anzahl</th>
                  </tr>
                </thead>
                <tbody>
              <% fleet.get_ships.each do |ship, amount| %>
                <tr>
                  <td><%= ship.name %></td>
                  <td><%= ship.offense %></td>
                  <td><%= ship.defense %></td>
                  <td><%= ship.velocity %></td>
                  <td><%= ship.ressource_capacity %></td>
                  <td><%= amount %></td>
                </tr>
                <% end%>
                </tbody>
              </table>
            </div>
        </td>
      </tr>
      <% end%>
    <% end %>
  </tbody>
</table>

<% unless @approaching_fleets.empty? %>

<h1>Approaching Fleets</h1>
<table class="table">
  <thead>
    <tr>
      <th>User</th>
      <th>Mission</th>
      <th>Target</th>
      <th>approaches in</th>
    </tr>
  </thead>

  <tbody>
    <% @approaching_fleets.each do |fleet| %>
      <% if fleet.mission.id == 3 %>
        <% mission = "Attack" %>
        <tr class="error">
      <% elsif fleet.mission.id == 6 %>
        <% mission = "Transport" %>
        <tr class="warning">
      <% elsif fleet.mission.id == 4 %>
        <% mission = "Travel" %>
        <tr class="success">
      <% end %>
        <td><%= fleet.user.username %></td>
        <td><%= mission %></td>
        <td><%= fleet.target_planet.name %> (<%= fleet.target_planet.id %>)</td>
        <td><%= Time.at fleet.arrival_time %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<% else %>
  <h1>Keine ankommenden Schiffe</h1>
<% end %>

<script type="text/javascript">
  $(".ship-info").on("click", function(){
    id = $(this).attr("fleet");
    $(".info-"+id).animate({ height: 'toggle', opacity: 'toggle' }, 'slow');
  });

</script>