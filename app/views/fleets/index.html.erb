<h1>Listing fleets</h1>

<table>
  <thead>
    <tr>
      <th>Credit</th>
      <th>Ressource capacity</th>
      <th>Ore</th>
      <th>Crystal</th>
      <th>Storage factor</th>
      <th>Velocity factor</th>
      <th>Offense</th>
      <th>Defense</th>
      <th>User</th>
      <th>Mission</th>
      <th>Departure time</th>
      <th>Arrival time</th>
      <th>Start planet</th>
      <th>Target planet</th>
      <% @shiptypes.each do |shiptype| %>
      <th><%= shiptype.name %></td>
      <% end %>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @fleets.each do |fleet| %>
      <tr>
        <td><%= fleet.credit %></td>
        <td><%= fleet.ressource_capacity %></td>
        <td><%= fleet.ore %></td>
        <td><%= fleet.crystal %></td>
        <td><%= fleet.storage_factor %></td>
        <td><%= fleet.velocity_factor %></td>
        <td><%= fleet.offense %></td>
        <td><%= fleet.defense %></td>
        <td><%= fleet.user.username %></td>
        <td><%= fleet.mission.info_text %></td>
        <td><%= fleet.departure_time %></td>
        <td><%= fleet.arrival_time %></td>
        <td><%= fleet.start_planet.name %></td>
        <% if fleet.target_planet.name == fleet.start_planet.name %>
        <td></td>
        <% else %>
        <td><%= fleet.target_planet.name %></td>
        <% end %>
        <% @shiptypes.each do |shiptype| %>
          <th><%= fleet.get_amount_of_ship( shiptype.id ) %></td>
        <% end %>
        <td><%= link_to 'Show', fleet %></td>
        <td><%= link_to 'Edit', edit_fleet_path(fleet) %></td>
        <td><%= link_to 'Destroy', fleet, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

